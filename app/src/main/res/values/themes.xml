<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HATARU" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/color_light_white</item>
        <item name="colorPrimaryVariant">@color/color_light_white</item>
        <item name="colorOnPrimary">@color/label_light_primary</item>
        <item name="colorSecondary">@color/our_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="ENTER_LOGO">
        <item name="android:src">@drawable/enter_white</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TEXTVIEW_COLOR">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SPLASH_SCREEN">
        <item name="background">@color/light_blue</item>
    </style>


</resources>