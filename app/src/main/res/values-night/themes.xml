<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HATARU" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey</item>

    </style>


    <style name="ENTER_LOGO">
        <item name="android:src">@drawable/enter_black</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TEXTVIEW_COLOR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SPLASH_SCREEN">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/dark_bottom_nav</item>
    </style>

    <style name="BOTTOM_SHEET_FRAGMENT_MAP">
        <item name="android:background">@drawable/rounded_black_background</item>
    </style>

    <style name="FRAGMENT_FLAT_BOTTOM_SHEET">
        <item name="android:background">@drawable/rounded_black_background</item>
    </style>

    <style name="BUTTONS_ON_MAP">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="INFO_OCTAGON">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HATA_RU">
        <item name="android:text">HATA.RU</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SEARCH_TEXT_BACKGROUND">
        <item name="srcCompat">@drawable/cluster_view_background</item>
        <item name="android:tint">@color/color_light_gray_light</item>
    </style>

    <style name="SEARCH">
        <item name="android:hint">Поиск</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="SEARCH_BUTTON">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@android:drawable/ic_search_category_default</item>
    </style>

    <style name="BACKGROUND_LIST_FLATS">
        <item name="android:background">@color/dark_bottom_nav</item>
    </style>

    <style name="RECYCLER_LIST_FLATS">
        <item name="android:background">@color/color_dark_gray_light</item>
    </style>

    <style name="TEXT_SHORT_DESCRIPTION">
        <item name="android:text">Однокомнатная квартира для 4х гостей в доме бизнес класса на ул. Тельмана д. 110</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_VIEW_AREA">
        <item name="android:text">47 кв.м.</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_VIEW_PRICE">
        <item name="android:text">3 848 ₽</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BACKGROUND_CARDVIEW_FLAT">
        <item name="android:background">@color/support_light_separator</item>
    </style>

    <style name="LIKE_BUTTON_ON_NOLIKED_FLAT">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/vector</item>
    </style>

    <style name="LIKE_BUTTON_ON_LIKED_FLAT">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/image_like</item>
    </style>

    <style name="Change_Dising_Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/changing_design_dark</item>
    </style>

</resources>