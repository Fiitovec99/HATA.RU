<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HATARU" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_background</item>

    </style>


    <style name="ENTER_LOGO">
        <item name="android:src">@drawable/enter_black</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TEXTVIEW_COLOR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SPLASH_SCREEN">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/dark_bottom_nav</item>
    </style>

</resources>