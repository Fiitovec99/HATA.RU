<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/RECYCLER_LIST_FLATS"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.MenuFragment"
    android:background="#E5E4E4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BACKGROUND_LIST_FLATS"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:gravity="center"
            style="@style/MENU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HATA.RU" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BACKGROUND_CARDVIEW_FLAT"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            style="@style/TEXTVIEW_COLOR"
            android:text="HATA.RU — сервис краткосрочной аренды апартаментов. Мы предоставляем понятный, предсказуемый сервис, где будет чисто и безопасно.

Вам не нужно встречаться с менеджерами или собственниками квартир, после бронирования вам будут доступны инструкции по самостоятельному заезду.

Апартаменты оборудованы всем необходимым, чтобы чувствовать себя как дома."
            android:background="?attr/selectableItemBackground" />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BACKGROUND_CARDVIEW_FLAT"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контактная информация"
                style="@style/TEXTVIEW_COLOR"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/LinkToTheWebsite"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                style="@style/TEXTVIEW_COLOR"
                android:layout_height="wrap_content"
                android:text="@string/site_string"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textViewOpenWhatsUp"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                style="@style/TEXTVIEW_COLOR"
                android:layout_height="wrap_content"
                android:text="@string/whatsUp_string"
                android:textSize="20sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>