<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hataru.onboarding.screens.FirstScreen">

    <TextView
        android:id="@+id/firstScreen"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="HATA.RU — сервис краткосрочной аренды апартаментов.
         \nМы предоставляем понятный, предсказуемый сервис, \nгде будет чисто и безопасно."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/continue1"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:text="Пропустить"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="343dp"
        android:src="@drawable/ic_first_onboarding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_button_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_button_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>