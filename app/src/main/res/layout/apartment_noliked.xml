<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:padding="4dp"
        tools:ignore="MissingConstraints">

        <!-- Изображение квартиры -->
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="210dp">

        </com.denzcoskun.imageslider.ImageSlider>


        <!-- Кнопка "Нравится" (Like) -->
        <ImageButton
            android:id="@+id/button_Like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-390dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:onClick="Like"
            android:src="@drawable/Vector"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/text_short_description"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_slider"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-44dp"
            android:text="Однокомнатная квартира для 4х гостей в доме бизнес класса на ул. Тельмана д. 110"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_View_Area"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_short_description"
            android:layout_marginBottom="-29dp"
            android:text="47 кв.м."
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_View_Price"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_slider"
            android:layout_alignBottom="@+id/text_short_description"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-31dp"
            android:text="3 848 ₽"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>